{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:vue/vue3-recommended", // Для Vue 3 (для Vue 2 используйте "plugin:vue/rec
    "eslint:recommended",
    "@vue/prettier", // Интеграция Prettier для Vue
    "plugin:prettier/recommended"
  ],

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "rules": {
    // Ваши кастомные правила ESLint
    "vue/multi-word-component-names": "off" // Отключает требование многословных имен компонентов
  }
}
