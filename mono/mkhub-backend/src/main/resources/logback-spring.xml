<configuration>

    <property name="LOG_PATH" value="logs"/>

    <!-- ðŸ”¹ Ð›Ð¾Ð³-Ñ„Ð°Ð¹Ð» Ð´Ð»Ñ Ð´ÐµÐ¹ÑÑ‚Ð²Ð¸Ð¹ Ð¿Ð¾Ð»ÑŒÐ·Ð¾Ð²Ð°Ñ‚ÐµÐ»ÐµÐ¹ -->
    <appender name="REQUEST_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/requests.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/requests.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>14</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- ðŸ”¹ Ð›Ð¾Ð³Ð³ÐµÑ€ Ð´Ð»Ñ Ð»Ð¾Ð³Ð¸Ñ€Ð¾Ð²Ð°Ð½Ð¸Ñ Ð´ÐµÐ¹ÑÑ‚Ð²Ð¸Ð¹ Ð¿Ð¾Ð»ÑŒÐ·Ð¾Ð²Ð°Ñ‚ÐµÐ»Ñ -->
    <logger name="REQUEST_LOGGER" level="INFO" additivity="false">
        <appender-ref ref="REQUEST_FILE"/>
    </logger>

    <!-- ðŸ”¸ ÐšÐ¾Ð½ÑÐ¾Ð»ÑŒÐ½Ñ‹Ð¹ Ð»Ð¾Ð³Ð³ÐµÑ€ Ð´Ð»Ñ ÑÐ¸ÑÑ‚ÐµÐ¼Ð½Ñ‹Ñ… Ð»Ð¾Ð³Ð¾Ð² -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ðŸ”¸ Root: Ñ‚Ð¾Ð»ÑŒÐºÐ¾ ÐºÐ¾Ð½ÑÐ¾Ð»ÑŒ, Ð±ÐµÐ· Ñ„Ð°Ð¹Ð»Ð¾Ð² -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
